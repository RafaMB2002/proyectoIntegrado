{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center mx-auto wow fadeInUp" style="max-width: 500px;">
                <h1 class="display-5 mb-5">Platos</h1>
            </div>
            <div class="row g-4">
                 {% for plato in platos %}
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="card position-relative h-100">
                        <div class="service-text rounded p-5">
                            <div class="btn-square bg-light rounded-circle mx-auto mb-4"
                                style="width: 64px; height: 64px;">
                                {# ruta anterior:  "img/juegosDeMesa/"~ #}
                                {# <img class="img-fluid" src={{plato.foto}} alt="Icon"> #}
                                <img class="img-fluid" src='https://www.pequerecetas.com/wp-content/uploads/2021/04/pollo-teriyaki-receta.jpg' alt="Icon">
                            </div>
                            <div class="text-center">
                                <h3 class="mb-3">{{plato.nombre}}</h3>
                            </div>
                            <div class="text-start">
                                <p class="mb-2">{{plato.descripcion}}</p>
                                <h5 class="mb-2">{{plato.precio}}â‚¬</h5>
                            </div>
                            <div class="position-absolute bottom-0 end-0 m-3">
                                <p class="mb-0">{{plato.tipo}}</p>
                            </div>
                        </div>
                    </div>
                </div>
                 {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}