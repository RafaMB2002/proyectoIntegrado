{% extends 'base.html.twig' %}
{% block navbar %}{% endblock %}

{% block body %}
	<header>
		<h1 class="site-heading text-center text-faded d-none d-lg-block">
			<span class="site-heading-upper text-primary mb-3">bar piscina</span>
			<span class="site-heading-lower">La calle nueva</span>
		</h1>
	</header>
	<!-- Navigation-->
	<nav class="navbar navbar-expand-lg navbar-dark py-lg-4" id="mainNav">
		<div class="container">
			<a class="navbar-brand text-uppercase fw-bold d-lg-none" href="index.html">Bar Piscina la Calle Nueva</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">

				<ul class="navbar-nav mx-auto ml-auto">
					{% set excludedRoutes = ["http://127.0.0.1:8000/home", "http://127.0.0.1:8000/", "http://127.0.0.1:8000/index", "http://127.0.0.1:8000"] %}
					{% if app.request.uri not in excludedRoutes%}
						<li class="nav-item px-lg-4">
							<a class="nav-link text-uppercase" href="{{path('homepage')}}">Inicio</a>
						</li>
					{% endif %}
					{% if not app.user %}
						<li class="nav-item px-lg-4">
							<a class="nav-link text-uppercase" href="{{path('app_sobre_nosotros')}}">Sobre nosotros</a>
						</li>
					{% endif %}
					{% if app.request.uri != "http://127.0.0.1:8000/carta" %}
						<li class="nav-item px-lg-4">
							<a class="nav-link text-uppercase" href="{{path('app_carta')}}">Carta</a>
						</li>
					{% endif %}

					{% if app.request.uri != "http://127.0.0.1:8000/login" %}
						<li class="nav-item px-lg-4">
							<a class="nav-link text-uppercase" href="{{path('app_login')}}">Staff</a>
						</li>
					{% endif %}
					{% if app.user %}
						<li class="nav-item px-lg-4">
							<a class="nav-link text-uppercase" href="{{path('comandas_cocina')}}">Comandas cocina</a>
						</li>
					{% endif %}
					{% if app.user %}
						<li class="nav-item px-lg-4">
							<a class="nav-link text-uppercase" href="{{path('comandas_camarero')}}">Comandas camarero</a>
						</li>
					{% endif %}
					{% if app.user %}
						<li class="nav-item px-lg-4">
							<a class="nav-link text-uppercase" href="{{path('finalizarComanda')}}">finalizar comandas</a>
						</li>
					{% endif %}
					{% if app.user %}
						<li class="nav-item px-lg-4">
							<a class="nav-link text-uppercase" href="{{path('generarQR')}}">Generar QR</a>
						</li>
					{% endif %}
					{% if app.user %}
						<li class="nav-item px-lg-4">
							<a class="nav-link text-uppercase" href="{{path('app_logout')}}">Cerrar sesion</a>
						</li>
					{% endif %}
				</ul>
				{% if app.user %}
					<ul class="navbar-nav">
						<li class="nav-item username-item">
							<span class="nav-link text-uppercase username-wrapper">
								<i class="fas fa-user"></i>
								{{ app.user.nombre }}
							</span>
						</li>
					</ul>
				{% endif %}
			</div>
		</div>
	</nav>
	<section class="page-section clearfix">
		<div class="container">
			<div
				class="intro">{# <img class="intro-img img-fluid mb-3 mb-lg-0 rounded" src="images/landingPage/portada1.jpg" alt="..."/> #}
			</div>
		</div>
	</section>
	<section class="page-section">
		<div
			id="myCarousel" class="carousel slide" data-ride="carousel">
			<!-- Indicators -->
			<ol class="carousel-indicators">
				<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
				<li data-target="#myCarousel" data-slide-to="1"></li>
				{# <li data-target="#myCarousel" data-slide-to="2"></li> #}
			</ol>

			<!-- Slides -->
			<div class="carousel-inner carousel-fade">
				<div class="carousel-item active">
					<div class="row">
						<div class="col-md-4">
							<img src="images/landingPage/carusel/flamenquin.jpg" alt="Imagen 1" class="d-block w-100">
						</div>
						<div class="col-md-4">
							<img src="images/landingPage/carusel/paella.jpg" alt="Imagen 2" class="d-block w-100">
						</div>
						<div class="col-md-4">
							<img src="images/landingPage/carusel/rosca.jpg" alt="Imagen 3" class="d-block w-100">
						</div>
					</div>
				</div>
				<div class="carousel-item">
					<div class="row">
						<div class="col-md-4">
							<img src="images/landingPage/carusel/pulpo.jpg" alt="Imagen 4" class="d-block w-100">
						</div>
						<div class="col-md-4">
							<img src="images/landingPage/carusel/ibericos.jpg" alt="Imagen 5" class="d-block w-100">
						</div>
						<div class="col-md-4">
							<img src="images/landingPage/carusel/tablaMontaditos.jpg" alt="Imagen 6" class="d-block w-100">
						</div>
					</div>
				</div>
			</div>

			<!-- Controls -->
			<a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Anterior</span>
			</a>
			<a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Siguiente</span>
			</a>
		</div>
	</section>

	<section class="page-section cta">
		<div class="container">
			<div class="row">
				<div class="col-xl-9 mx-auto">
					<div class="cta-inner bg-faded text-center rounded">
						<h2 class="section-heading mb-4">
							<span class="section-heading-upper">Nuestra promesa</span>
							<span class="section-heading-lower">para usted</span>
						</h2>
						<p class="mb-0">Cuando ingresa a nuestro bar para comenzar el día, nos dedicamos a brindarle un servicio amable, un ambiente acogedor y, sobre todo, excelentes productos elaborados con ingredientes de la más alta calidad. Si no está satisfecho, háganoslo saber y haremos todo lo posible para hacer las cosas bien.</p>
					</div>
				</div>
			</div>
		</div>
	</section>
	<footer class="footer text-faded text-center py-5">
		<div class="container">
			{% set fechaHoraActual = now() %}
			<p class="m-0 small">Copyright &copy; Bar Piscina la Calle Nueva
				{{ fechaHoraActual.format('Y') }}</p>
		</div>
	</footer>
{% endblock %}

{% block footer %}{% endblock %}
