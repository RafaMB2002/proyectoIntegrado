{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center mx-auto wow fadeInUp" style="max-width: 500px;">
                <h1 class="display-5 mb-5">Listado de juegos</h1>
            </div>
            <div class="row g-4">
                 {% for plato in platos %}
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="card position-relative h-100">
                        <div class="service-text rounded p-5">
                            <div class="btn-square bg-light rounded-circle mx-auto mb-4"
                                style="width: 64px; height: 64px;">
                                {# ruta anterior:  "img/juegosDeMesa/"~ #}
                                <img class="img-fluid" src={{plato.foto}} alt="Icon">
                            </div>
                            <h5 class="mb-3">{{plato.nombre}}</h4>
                                <p class="mb-0">{{plato.id}}</p>
                        </div>
                        <div class="service-btn rounded-0 rounded-bottom">
                            {# <a class="text-primary fw-medium" href="">Leer mas<i
                                    class="bi bi-chevron-double-right ms-2"></i></a> #}
                        </div>
                    </div>
                </div>
                 {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}