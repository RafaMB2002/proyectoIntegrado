{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1>Registro</h1>

                <form action="{{ path('registro_procesar') }}" method="POST">
                    {{ form_widget(form._token) }}
                    <div class="form-group">
                        <label for="{{ form.nombre.vars.id }}">Nombre:</label>
                        {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.nombre) }}
                    </div>

                    <div class="form-group">
                        <label for="{{ form.apellidos.vars.id }}">Apellido:</label>
                        {{ form_widget(form.apellidos, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.apellidos) }}
                    </div>

                    <div class="form-group">
                        <label for="{{ form.dni.vars.id }}">DNI:</label>
                        {{ form_widget(form.dni, {'attr': {'class': 'form-control'}}) }}
                         {{ form_errors(form.dni) }}
                    </div>

                    <div class="form-group">
                        <label for="{{ form.email.vars.id }}">Correo Electrónico:</label>
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                         {{ form_errors(form.email) }}
                    </div>

                    <div class="form-group">
                        <label for="{{ form.roles.vars.id }}">Rol:</label>
                        {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        <label for="{{ form.password.vars.id }}">Contraseña:</label>
                        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.password) }}
                    </div>

                    <div class="form-group">
                        <label for="{{ form.confirm_password.vars.id }}">Contraseña:</label>
                        {{ form_widget(form.confirm_password, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.confirm_password) }}
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Registrarse</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

